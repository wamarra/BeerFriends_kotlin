<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.beerfriends">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".BeerFriendsApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeerFriends">
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.OnBoardingActivity"
            android:theme="@style/Theme.BeerFriends.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/Theme.BeerFriends.NoActionBar"/>
        <activity
            android:name=".view.AuthActivity"/>
    </application>

</manifest>